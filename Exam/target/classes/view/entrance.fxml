<AnchorPane prefHeight="190.0" prefWidth="327.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="a.vkube.controller.EntranceController">
    <children>
      <ImageView fitHeight="290.0" fitWidth="365.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/Entrance.jpg" />
         </image>
      </ImageView>
        <GridPane layoutX="80.0" layoutY="70.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="70.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="134.0" minWidth="10.0" prefWidth="130.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Логин:" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font></Label>
                <Label text="Пароль:" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font size="13.0" />
               </font></Label>
                <TextField fx:id="txtLogin" prefHeight="22.0" prefWidth="122.0" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <Button fx:id="buttonOK" layoutX="132.0" layoutY="161.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="66.0" text="Войти" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="205.0" AnchorPane.topAnchor="160.0">
         <font>
            <Font size="13.0" />
         </font></Button>
      <Label fx:id="labelSignText" layoutX="27.0" layoutY="25.0" prefHeight="16.0" prefWidth="313.0" text="Неверный логин или пароль. Попробуйте ещё раз!" textFill="#f50202">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="buttonExit" layoutX="209.0" layoutY="161.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="72.0" text="Выход" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="205.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="160.0">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
